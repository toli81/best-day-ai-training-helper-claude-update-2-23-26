rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isTrainer(trainerId) {
      return isAuthenticated() && request.auth.uid == trainerId;
    }

    // Trainer profiles: only the trainer can read/write their own profile
    match /trainers/{trainerId} {
      allow read, write: if isTrainer(trainerId);

      // Client subcollection: trainer-only access
      match /clients/{clientId} {
        allow read, write: if isTrainer(trainerId);
      }

      // Sessions subcollection: trainer-only access
      match /sessions/{sessionId} {
        allow read, write: if isTrainer(trainerId);
      }
    }

    // Exercise Library: any authenticated trainer can read
    // Only the creator can update/delete
    // Any authenticated trainer can create
    match /exerciseLibrary/{exerciseId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.resource.data.addedBy == request.auth.uid;
      allow update, delete: if isAuthenticated()
        && resource.data.addedBy == request.auth.uid;
    }
  }
}
